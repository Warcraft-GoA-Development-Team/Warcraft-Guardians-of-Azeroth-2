scripted_animation = {

	### Brief: triggered_animation
	# List of triggerable animations with their condition and animation string.
	triggered_animation = {
		trigger = { portrait_should_wield_axe_trigger = yes }

		# both syntaxes are supported
		animation = { one_handed_1_aggressive one_handed_2_aggressive }
		animation = one_handed_1_aggressive

		# Instead of defining 'animation', you can refer to another scripted animation
		scripted_animation = key_of_scripted_animation
	}
	[...]

	### Brief: animation
	# Default animation to display when none of the triggered animations have triggered
	animation = anger

	# Instead of defining 'animation', you can refer to another scripted animation
	scripted_animation = key_of_scripted_animation
}
