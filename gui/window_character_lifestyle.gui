				using = Scrollbar_Horizontal_White
			}

			scrollwidget = { # Indentation is intentionaly fucked up for easier updates to new vanilla version

		hbox = {
			name = "lifestyles"
			datamodel = "[CharacterLifestyleWindow.GetLifestyles]"
			layoutpolicy_horizontal = expanding
			layoutpolicy_vertical = expanding
			margin = { 0 150 }
			margin_left = 230
			margin_right = 80
			spacing = 10
			max_width = 2080

			item = {
				button_normal = {
					layoutpolicy_vertical = expanding
					layoutpolicy_horizontal = expanding
					onclick = "[CharacterLifestyleWindow.OpenLifestyle( Lifestyle.Self )]"
					onclick = "[PlaySfxEvent( Concatenate( 'event:/SFX/UI/Character/Lifestyle/sfx_ui_character_lifestyle_', Lifestyle.GetKey ) )]"
					#clicksound = 
					maximumsize = { -1 900 }

					# Warcraft
					minimumsize = { 300 -1 }

					effectname = "NoHighlight"
