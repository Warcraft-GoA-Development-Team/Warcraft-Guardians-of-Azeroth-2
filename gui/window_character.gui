types CharacterWindow
{
	# Warcraft
	type character_window_isolation = vbox {
		name = "main_content_isolation"
		using = Window_Margins_Sidebar

		# ###############
		# # Character box
		widget = {
			name = "main_characters"
			datacontext = "[GetIllustration( 'character_view_bg' )]"
			layoutpolicy_horizontal = expanding
			layoutpolicy_vertical = expanding
			size = { 0 100% }

			widget = {
				size = { 100% 100% }
				using = Animation_Character_Window_Refresh

				background = {
					visible = "[GetScriptedGui('is_in_pandaria_sgui').IsValid( GuiScope.SetRoot( Character.MakeScope ).End)]"
					texture = "gfx/interface/illustrations/isolation/pandaria.dds"
					fittype = centercrop
					margin_bottom = 0
					margin_left = 0

					modify_texture = {
						texture = "gfx/interface/component_masks/mask_rough_edges_down_right.dds"
						spriteType = Corneredtiled
						spriteborder = { 20 20 }
						blend_mode = alphamultiply
						texture_density = 2
					}
				}

				buttons_window_control = {
					parentanchor = top|right

					blockoverride "button_close"
					{
						onclick = "[CharacterWindow.Close]"
					}

					blockoverride "button_back"
					{
						visible = "[HasViewHistory]"
						onclick = "[OpenFromViewHistory]"
						tooltip = "[GetViewHistoryTooltip]"
					}

					blockoverride "button_me"
					{
						visible = "[Not(Character.IsLocalPlayer)]"
						onclick = "[DefaultOnCharacterClick(GetPlayer.GetID)]"
					}

					blockoverride "button_pin" {}
				}

				text_label_center = {
					parentanchor = top|hcenter
					position = { 0 35 }
					text = "ISOLATION_TITLE"
					fontsize = 35
				}
				text_single = {
					visible = "[GetScriptedGui('is_in_pandaria_sgui').IsValid( GuiScope.SetRoot( Character.MakeScope ).End)]"
					parentanchor = center|hcenter
					text = "ISOLATION_PANDARIA_INSTRUCTIONS"
					multiline = yes
					autoresize = yes
					max_width = 500
					fontsize = 20
					size = { 100% 100% }

					default_format = "#high"
					align = nobaseline

					background = {
						name = "skill_icon_bg"
						using = Background_Area_Dark
						margin = { 20 20 }
					}
				}
			}
		}
	}

	type character_window_contents = vbox {
		name = "main_content"
		using = Window_Margins_Sidebar

